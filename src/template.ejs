<!DOCTYPE html>
<html>

<head>
    <meta http-equiv="Content-Type" content="text/html;charset=utf-8" />
    <meta name="viewport" content="width=device-width,initial-scale=1.0,minimum-scale=1.0,maximum-scale=1.0, user-scalable=no" />
    <meta name="apple-mobile-web-app-capable" content="yes" />
    <meta name="apple-mobile-web-app-status-bar-style" content="black-translucent" />
    <meta name="format-detection" content="telephone=no" />
    <meta content="email=no" name="format-detection" />
    <meta http-equiv="Cache-Control" content="no-siteapp" />
    <meta name="full-screen" content="yes" />
    <title>
        <%= htmlWebpackPlugin.options.title %>
    </title>

    <script title="公共全局参数">
        var ua = navigator.userAgent.toLowerCase();
        var publicData = {
            browser: {
                bISPC: !/Android|webOS|iPhone|iPod|BlackBerry/i.test(navigator.userAgent),
                bIsIOS: !!navigator.userAgent.match(/\(i[^;]+;( U;)? CPU.+Mac OS X/),
                bIsUc: ua.match(/ucweb/i) == "ucweb",
                bIsAndroid: ua.match(/android/i) == "android",
                bIsAndroidVersion: Number(ua.substr(ua.indexOf('android') + 8, 3)),
                bIsQQ: ua.match(/qq/i) == "qq",
                bIsWechat: ua.match(/micromessenger/i) == "micromessenger",
                bIsWeibo: ua.match(/weibo/i) == "weibo",
                bIsHuawei: ua.match(/huawei/i) == "huawei"
            },
            resource: '<%= htmlWebpackPlugin.options._src %>',
            file: '<%= htmlWebpackPlugin.options._file %>'
        };
    </script>
    <script title="rem计算">
        (function(doc, win) {
            var docEl = doc.documentElement; // 根元素
            var resizeEvt = 'onorientationchange' in win ? 'onorientationchange' : 'resize'; // 兼容屏幕变化事件
            var recalc = function() {
                var clientWidth = Math.min(win.innerWidth, docEl.clientWidth); // 处理一些移动设备中获取到怪异设备宽度的情况
                if (clientWidth > 720) {
                    docEl.style.fontSize = '32px';
                } else if (clientWidth <= 720) {
                    docEl.style.fontSize = clientWidth * 32 / 720 + 'px'
                }
            };
            win.addEventListener(resizeEvt, recalc, false);
            doc.addEventListener('DOMContentLoaded', recalc, false);
        })(document, window);
    </script>
    <link rel="stylesheet" href="<%= htmlWebpackPlugin.options._src %>/pages/<%= htmlWebpackPlugin.options._page %>/index<%= htmlWebpackPlugin.options._hash %>.css" />
</head>

<body>
    <main id="app"></main>
    <script src="https://cdn.bootcss.com/echarts/4.2.0-rc.2/echarts.min.js"></script>
    <script src="<%= htmlWebpackPlugin.options._src %>/vendor<%= htmlWebpackPlugin.options._hash %>.js"></script>
    <script src="<%= htmlWebpackPlugin.options._src %>/pages/<%= htmlWebpackPlugin.options._page %>/index<%= htmlWebpackPlugin.options._hash %>.js"></script>
</body>

</html>
